<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    @RenderSection("scripts", required: false)
    <!-- Title -->
    <!-- Favicon -->
    <link href="~/AllContent/images/favicon.ico" rel="icon" type="image/x-icon" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i%7CLato:100,100i,300,300i,400,400i,700,700i,900,900i"
          rel="stylesheet" />
    <link href="~/AllContent/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    <!-- Mobile Menu -->
    <link href="~/AllContent/css/mmenu.css" rel="stylesheet" type="text/css" />
    <link href="~/AllContent/css/mmenu.positioning.css" rel="stylesheet" type="text/css" />

    <!-- Stylesheet -->
    <link href="~/AllContent/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/AllContent/css/borrow-book-popup.css" rel="stylesheet" type="text/css" />

</head>
<body class="layout-v3">
    <!-- Start: Header Section -->
    <header id="header" class="navbar-wrapper">
        <div class="navbar-brand">
            <br>
            <h1>
                <a href="@Url.Action("Home", "Home")" style="position: relative; right: 300px; bottom: 20px">
                    <img src="~/AllContent/images/Logo.png" alt="FPT University" />
                </a>
                <a href="#" class="lang"><img class="lang" src="~/AllContent/images/vn_flag.png" /></a>
                <a href="#" class="lang"><img class="lang" src="~/AllContent/images/uk_flag.png" /></a>
            </h1>
        </div>
    </header>
    <!-- End: Header Section -->

    @RenderBody()

    <!-- Start: Footer -->
    <footer class="site-footer" style="background-color: #f05122">
        <div class="container">
            <div id="footer-widgets">
                <div class="row">
                    <div class="col-md-5 col-sm-6 widget-container">
                        <div id="text-2" class="widget widget_text">
                            <h3 class="footer-widget-title" style="font-family: arial">
                                Thư viện trường đại học FPT<br>Cơ
                                sở Hà Nội
                            </h3>
                            <span class="underline left"></span>
                            <address>
                                <div class="info">
                                    <i class="fa fa-location-arrow"></i>
                                    <span>
                                        Khu Giáo dục và Đào tạo – Khu Công nghệ cao Hòa Lạc – Km29 Đại lộ Thăng Long,
                                        Thạch Thất, TP. Hà Nội
                                    </span>
                                </div>
                                <div class="info">
                                    <i class="fa fa-envelope"></i>
                                    <span><a href="mailto:daihocfpt@fpt.edu.vn">daihocfpt@fpt.edu.vn</a></span>
                                </div>
                                <div class="info">
                                    <i class="fa fa-phone"></i>
                                    <span>(024) 7300 5588</span>
                                </div>
                            </address>
                        </div>
                    </div>
                    <div class="col-md-1 col-sm-6 widget-container"></div>
                    <div class="clearfix hidden-lg hidden-md hidden-xs tablet-margin-bottom"></div>
                    <div class="col-md-3 col-sm-3 widget-container"></div>
                    <div class="col-md-7 col-sm-6 widget-container" style="padding-left: 450px">
                        <div id="text-4" class="widget widget_text">
                            <h3 class="footer-widget-title" style="font-family: arial">Giờ mở cửa</h3>
                            <span class="underline left"></span>
                            <div class="timming-text-widget">
                                <time>Từ thứ 2 đến thứ 6: 8:00 - 18:00</time>
                                <time>Thứ 7: 8:00 - 12:00</time>
                                <time>Chủ nhật: đóng cửa</time>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- End: Footer -->
    <!-- jQuery Latest Version 1.x -->
    <script type="text/javascript" src="~/AllContent/js/jquery-1.12.4.min.js"></script>

    <!-- jQuery UI -->
    <script type="text/javascript" src="~/AllContent/js/jquery-ui.min.js"></script>

    <!-- jQuery Easing -->
    <script type="text/javascript" src="~/AllContent/js/jquery.easing.1.3.js"></script>

    <!-- Bootstrap -->
    <script type="text/javascript" src="~/AllContent/js/bootstrap.min.js"></script>

    <!-- Mobile Menu -->
    <script type="text/javascript" src="~/AllContent/js/mmenu.min.js"></script>

    <!-- Harvey - State manager for media queries -->
    <script type="text/javascript" src="~/AllContent/js/harvey.min.js"></script>

    <!-- Waypoints - Load Elements on View -->
    <script type="text/javascript" src="~/AllContent/js/waypoints.min.js"></script>

    <!-- Facts Counter -->
    <script type="text/javascript" src="~/AllContent/js/facts.counter.min.js"></script>

    <!-- MixItUp - Category Filter -->
    <script type="text/javascript" src="~/AllContent/js/mixitup.min.js"></script>

    <!-- Owl Carousel -->
    <script type="text/javascript" src="~/AllContent/js/owl.carousel.min.js"></script>

    <!-- Accordion -->
    <script type="text/javascript" src="~/AllContent/js/accordion.min.js"></script>

    <!-- Responsive Tabs -->
    <script type="text/javascript" src="~/AllContent/js/responsive.tabs.min.js"></script>

    <!-- Responsive Table -->
    <script type="text/javascript" src="~/AllContent/js/responsive.table.min.js"></script>

    <!-- Masonry -->
    <script type="text/javascript" src="~/AllContent/js/masonry.min.js"></script>

    <!-- Carousel Swipe -->
    <script type="text/javascript" src="~/AllContent/js/carousel.swipe.min.js"></script>

    <!-- bxSlider -->
    <script type="text/javascript" src="~/AllContent/js/bxslider.min.js"></script>

    <!-- Tab Navigation-->
    <script type="text/javascript" src="~/AllContent/js/tab-navigation.js"></script>
</body>
</html>
